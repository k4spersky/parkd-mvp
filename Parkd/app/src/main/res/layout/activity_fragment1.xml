<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topper"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/eucalyptus"
        android:orientation="vertical">
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:layout_below="@id/topper"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="4dp">

             <!-- colors will change programmatically -->
            <Button
                android:id="@+id/message_button"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:text="#27"
                android:textColor="#FFF"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/carpark_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:text="Q-Park Victoria Square"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/carpark_detail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carpark_name"
                android:layout_marginStart="5dp"
                android:text="Victoria Street 1" />

            <TextView
                android:id="@+id/carpark_detail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carpark_detail1"
                android:layout_marginStart="5dp"
                android:text="BT1 4QG Belfast" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
