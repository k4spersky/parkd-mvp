<?xml version="1.0" encoding="utf-8"?>
<!-- This is the fragment  to be displayed for a section associated with a tab -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register_ua"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3F4"
    android:baselineAligned="false">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/some_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginStartPercent="5%"
        app:layout_marginTopPercent="10%">

        <TextView
            android:id="@+id/editDetails"
            app:layout_widthPercent="45%"
            android:layout_height="wrap_content"
            android:text="Edit your details below"
            app:layout_marginStartPercent="27.5%"
            app:layout_marginTopPercent="10%"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editFN"
            app:layout_widthPercent="80%"
            android:layout_height="50dp"
            android:layout_below="@+id/editDetails"
            app:layout_marginStartPercent="10%"
            android:drawableStart="@drawable/accountgrey"
            android:drawablePadding="20dp"
            android:textCursorDrawable = "@color/google_blue"
            android:paddingLeft="10dp"
            android:maxLines="1"
            app:layout_marginTopPercent="3%"
            android:maxLength="30"
            android:text=""
            android:background="@drawable/edit_text_background"/>

        <EditText
            android:id="@+id/editLN"
            app:layout_widthPercent="80%"
            android:textCursorDrawable = "@color/google_blue"
            android:layout_height="50dp"
            android:layout_below="@+id/editFN"
            app:layout_marginStartPercent="10%"
            android:drawableStart="@drawable/accountgrey"
            android:drawablePadding="20dp"
            android:paddingLeft="10dp"
            android:maxLines="1"
            app:layout_marginTopPercent="3%"
            android:maxLength="30"
            android:text=""
            android:background="@drawable/edit_text_background"/>

        <EditText
            android:id="@+id/editEmail"
            app:layout_widthPercent="80%"
            android:textCursorDrawable = "@color/google_blue"
            android:layout_height="50dp"
            android:layout_below="@+id/editLN"
            app:layout_marginStartPercent="10%"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:paddingLeft="8dp"
            app:layout_marginTopPercent="3%"
            android:maxLength="30"
            android:text=""
            android:background="@drawable/edit_text_background"/>



        <EditText
            android:id="@+id/editpN"
            android:textCursorDrawable = "@color/google_blue"
            app:layout_widthPercent="80%"
            android:layout_height="50dp"
            android:layout_below="@+id/editEmail"
            app:layout_marginStartPercent="10%"
            android:drawableStart="@drawable/smartphone"
            android:drawablePadding="10dp"
            android:paddingLeft="8dp"
            android:maxLines="1"
            app:layout_marginTopPercent="3%"
            android:maxLength="30"
            android:text=""
            android:inputType="phone"
            android:background="@drawable/edit_text_background"/>

    </android.support.percent.PercentRelativeLayout>

    <Button
        android:id="@+id/saveData"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/add_card_btn"
        android:text="Save Changes"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
