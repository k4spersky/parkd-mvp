<?xml version="1.0" encoding="utf-8"?>
<!-- This is the fragment  to be displayed for a section associated with a tab -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register_ua"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3F4"
    android:baselineAligned="false">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/some_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginStartPercent="5%"
        app:layout_marginTopPercent="10%"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginStartPercent="5%"
            app:layout_marginTopPercent="5%"
            app:srcCompat="@drawable/accountgrey" />

        <TextView
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            app:layout_marginStartPercent="18%"
            app:layout_marginTopPercent="6%"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginStartPercent="18%"
            app:layout_marginTopPercent="2%"
            android:text=""
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:layout_below="@+id/firstName"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="2%"
            app:layout_marginStartPercent="18%"
            android:text="Last Name"
            android:textSize="14sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fName"/>
        <TextView
            android:id="@+id/lName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="2%"
            app:layout_marginStartPercent="18%"
            android:text=""
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lastName"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#9e9e9e"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/lName"
            app:layout_marginStartPercent="10%"
            android:id="@+id/view" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="3%"
            android:layout_below="@+id/lName"
            app:layout_marginStartPercent="5%"
            app:srcCompat="@drawable/smartphone" />

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_marginTopPercent="4%"
            app:layout_marginStartPercent="18%"
            android:layout_below="@+id/lName"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="11%"
            app:layout_marginStartPercent="18%"
            android:text="Sign Out"
            android:textSize="16sp"
            android:layout_below="@+id/phoneNumber"/>
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginStartPercent="5%"
            app:layout_marginTopPercent = "10%"
            android:layout_below="@+id/phoneNumber"
            app:srcCompat="@drawable/exit" />

    </android.support.percent.PercentRelativeLayout>


</LinearLayout>
