<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:layout_below="@id/topper"
        app:cardElevation="1.5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingStart="4dp">

            <!-- colors will change programmatically -->
            <TextView
                android:id="@+id/spaces"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="#27"
                android:textColor="#FFF"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/carpark_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carpark_detail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carpark_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="Victoria Street 1" />

            <TextView
                android:id="@+id/carpark_detail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carpark_detail1"
                android:layout_marginStart="5dp"
                android:text="BT1 4QG Belfast" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
