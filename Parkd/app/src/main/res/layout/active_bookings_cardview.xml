<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:cardElevation="1dp">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/some_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <ImageView
                android:id="@+id/spacePhoto"
                app:layout_widthPercent="45%"
                android:layout_height="135dp"
                android:layout_alignParentEnd="true"
                app:layout_marginEndPercent="1%" />

                <TextView
                    android:id="@+id/carpark_name"
                    app:layout_widthPercent="48%"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:layout_marginStartPercent="1%"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carpark_address"
                    android:paddingTop="30dp"
                    app:layout_widthPercent="48%"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/carpark_name"
                    app:layout_marginStartPercent="1%"
                    android:text="" />

                <TextView
                    android:id="@+id/carpark_postcode"
                    android:paddingTop="2dp"
                    app:layout_widthPercent="48%"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/carpark_address"
                    app:layout_marginStartPercent="1%"
                    android:text="" />

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/bar1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_corners"
                    android:layout_below="@+id/spacePhoto"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/carpark_bookedtimes"
                        android:paddingTop="2dp"
                        app:layout_widthPercent="38%"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        app:layout_marginStartPercent="1%"
                        android:textColor="@color/black"
                        android:text=""
                        android:textSize="11sp"/>

                <TextView
                    android:id="@+id/carpark_bookeddate"
                    android:paddingTop="2dp"
                    app:layout_widthPercent="48%"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/black"
                    app:layout_marginStartPercent="35%"
                    android:textSize="11sp"
                    android:text="" />


                <TextView
                    android:id="@+id/carpark_cost"
                    android:paddingTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:layout_marginEndPercent="5%"
                    android:textSize="11sp"
                    android:layout_alignParentEnd="true"
                    android:text="" />
                </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/bar2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/bar1"
                android:padding="4dp">

            <Button
                    android:id="@+id/Cancel"
                    app:layout_widthPercent="25%"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:background="#FD5E53"
                    android:bottomLeftRadius="2dp"
                    android:bottomRightRadius="2dp"
                    android:topLeftRadius="2dp"
                    android:topRightRadius="2dp"
                    android:textColor="@color/white"
                    app:layout_marginEndPercent="2%"
                    android:layout_alignParentEnd="true"/>

                <Button
                    android:id="@+id/GoogleMaps"
                    app:layout_widthPercent="60%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:bottomLeftRadius="2dp"
                    android:bottomRightRadius="2dp"
                    android:topLeftRadius="2dp"
                    android:topRightRadius="2dp"
                    android:text="Google Maps"
                    android:textColor="@color/white"
                    android:background="@color/google_blue"
                    app:layout_marginStartPercent="5%"
                    />

            </android.support.percent.PercentRelativeLayout>
            </android.support.percent.PercentRelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
