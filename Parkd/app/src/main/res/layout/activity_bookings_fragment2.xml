<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="4dp">

            <!-- colors will change programmatically -->
            <Button
                android:id="@+id/message_button"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:text="#25"
                android:textColor="#FFF"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/carpark_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:text="Private Car Park"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/carpark_detail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carpark_name"
                android:layout_marginStart="5dp"
                android:text="Victoria Street 1" />

            <TextView
                android:id="@+id/carpark_detail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carpark_detail1"
                android:layout_marginStart="5dp"
                android:text="BT1 4QG Belfast" />
            <TextView
                android:id="@+id/carpark_detail3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carpark_detail2"
                android:layout_marginStart="5dp"
                android:text="Date Booked: 10/08/2016" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
