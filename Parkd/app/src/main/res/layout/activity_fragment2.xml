<?xml version="1.0" encoding="utf-8"?>
<!-- This is the fragment  to be displayed for a section associated with a tab -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="50dp"
        sothree:umanoShadowHeight="4dp">

        <!-- MAIN CONTENT -->
        <FrameLayout
            android:id="@+id/framebox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="true">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                map:cameraTilt="50"
                map:uiCompass="false"
                map:uiZoomGestures="true"
                map:uiZoomControls="false"
                map:uiRotateGestures="false"
                map:uiScrollGestures="true" />

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/topper2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <fragment
                    android:id="@+id/place_autocomplete_fragment"
                    app:layout_widthPercent="90%"
                    android:layout_marginTop="15dp"
                    app:layout_marginStartPercent="5%"
                    android:layout_height="40dp"
                    android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment" />
            </android.support.percent.PercentRelativeLayout>
        </FrameLayout>

        <!-- SLIDING PANEL LAYOUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="false"
            android:id="@+id/dragView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"/>

                <Button
                    android:id="@+id/follow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/sliding_panel_fragment2"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_header"
                    android:layout_width="match_parent"
                    android:paddingStart="10dp"
                    android:layout_height="150dp"
                    android:background="@color/anti_flash_white"/>

                <TextView
                    android:id="@+id/text_header"
                    android:layout_width="match_parent"
                    android:paddingStart="10dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="100dp"
                    android:paddingBottom="5dp"
                    android:background="@color/dark_grey"
                    android:alpha="0.5"
                    android:textSize="38sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/space_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_below="@id/text_header"/>
            </RelativeLayout>
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</RelativeLayout>
